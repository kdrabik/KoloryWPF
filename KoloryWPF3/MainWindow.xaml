<Window x:Class="KoloryWPF3.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoloryWPF3"
        mc:Ignorable="d"
    Title="MainWindow" FontSize="25" Height="350" Width="525" 
        KeyDown="Window_KeyDown"
        Closed="Window_Closed">
    <!--x:class pomost do namespace KoloryWPF
    
    -->
    <Grid Height="319" VerticalAlignment="Bottom">
        <Rectangle x:Name="rectangle" Fill="#FFF4F4F5" Margin="10,10,10,91" Stroke="Black"/>
        <Slider x:Name="sliderR" Margin="10,0,10,64" Height="22" VerticalAlignment="Bottom" 
                ValueChanged="sliderR_ValueChanged" Maximum="255"/>
        <Slider x:Name="sliderG" Margin="10,0,10,37" Height="22" VerticalAlignment="Bottom" 
                ValueChanged="sliderG_ValueChanged" Maximum="255"/>
        <Slider x:Name="sliderB" Margin="10,0,10,10" Height="22" VerticalAlignment="Bottom" 
                ValueChanged="sliderB_ValueChanged" Maximum="255"/>
    </Grid>
</Window>

